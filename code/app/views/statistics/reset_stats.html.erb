<% provide(:title, 'Topics Available_To_Reset') %>

<h3> Click on Topic to Reset Statistics</h3>

<ul class="topics">
  <% @topics.each do |topic| %>
    <li>
    <%= link_to topic.name, reset_by_topic_url(:topic_to_reset => topic.id), 
        :data => {:confirm => 'Are you sure to reset statistics for '+topic.name+'?'} %>
    </li>
  <% end %>
</ul>
