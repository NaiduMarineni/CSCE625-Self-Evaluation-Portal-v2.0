<style>
img {
  display: block;
  max-width:250px;
  max-height:100px;
  width: auto;
  height: auto;
}

.thumbnail:hover {
    position:relative;
    top:0px;
    left:0px;
    /* width:600px; */
    /* height:600px; */
    width: auto;
    height: auto;
    max-width:600px;
    max-height:600px;
    display:block;
    z-index:999;
}

</style>

<% provide(:title, "Problem "+@problem.id.to_s) %>
<div class="row">
  <aside class="col-md-12">
    <section class="problem_info">

      <h1>Problem Topic: </h1>
      <div class="problemview"><%= link_to @problem.topic.name, @problem.topic%></div>

      <h1>Question: </h1>
      <div class = "problemview"><%= simple_format(@problem.question) %></div>
      
      <% if @problem.img.present? %>
        <h1>Associated Image</h1>
        <div class = "problemview"> <%= image_tag "data:image/jpeg;base64,#{@problem.img}", class: 'img-responsive img-thumbnail thumbnail', width: '400', height: '400' %> <br></div>
      <% end %>

      <h1>Answer: </h1>
      <div class="problemview">
        <% @correct_answers.each do |c_answer| %>
          <%= c_answer %> <br> 
        <% end %>
      </div>

      <h1>Remark: </h1>
      <div class = "problemview"><%= simple_format(@problem.remark) %></div>
      
      <%if (!@problem.links.empty?) %>
      <h1>For more info: </h1>
      <div class = "problemview">
          <% @problem.links.each do |link| %>
              <%= link_to nil, link.link %>
              <br>
          <% end %>
      </div>
      <%end%>
      <br>
      <br>

      <h1><%= link_to "Edit Problem", edit_problem_path(@problem) %> </h1>
      <br />
      <h1><%= link_to "Delete Problem", @problem, method: :delete,
                  data: {confirm: "Are you sure to delete this problem?"} %></h1>

      <script type="text/javascript">
        mathjax()
      </script>

    </section>
  </aside>
</div>